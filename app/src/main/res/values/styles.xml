<resources>
    <!-- Light theme -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="foregroundColor">@color/lightForeground</item>
        <item name="textColor">@color/black</item>
        <item name="activeColor">@color/lightActive</item>
    </style>

    <!-- Dark theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/darkBackground</item>
        <item name="foregroundColor">@color/darkForeground</item>
        <item name="textColor">@color/white</item>
        <item name="activeColor">@color/darkActive</item>
    </style>
</resources>
